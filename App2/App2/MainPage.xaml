<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App2"
             x:Class="App2.MainPage">

    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Button x:Name="login" Grid.Row="0" Text="Login" Clicked="Login_Clicked"></Button>
            <Button x:Name="register" Grid.Row="1" Text="Register" Clicked="Register_Clicked"></Button>
            
         

        </Grid>
    </StackLayout>

</ContentPage>
